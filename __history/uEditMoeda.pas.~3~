unit uEditMoeda;

interface

uses
  System.SysUtils, System.Classes, FMX.Edit, System.RegularExpressions, FMX.Controls;

type
  TEditMoeda = class(TEdit)
  private
    FInChange: Boolean;
    procedure FormatCurrencyText;
    procedure DoTextChanged; override;
  public
    constructor Create(AOwner: TComponent); override;
  end;

procedure Register;

implementation

procedure Register;
begin
  RegisterComponents('savr', [TEditMoeda]);
end;

{ TEditMoeda }

constructor TEditMoeda.Create(AOwner: TComponent);
begin
  inherited;
  KeyboardType := TVirtualKeyboardType.NumberPad;
  Text := 'R$ 0,00';
end;

procedure TEditMoeda.DoTextChanged;
begin
  inherited;
  if not FInChange then
    FormatCurrencyText;
end;

procedure TEditMoeda.FormatCurrencyText;
var
  TextoLimpo: string;
  Valor: Double;
begin
  FInChange := True;

  // Remove qualquer caractere não numérico
  TextoLimpo := TRegEx.Replace(Text, '\D', '');

  if TextoLimpo = '' then
    Text := 'R$ 0,00'
  else
  begin
    Valor := StrToFloat(TextoLimpo) / 100;
    Text := FormatFloat('R$ #,##0.00', Valor);
  end;

  SelStart := Length(Text);
  FInChange := False;
end;

end.

